<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editLitros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Litros disponibles en sucursal"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editMetros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Metros de fila (dibujar en el mapa)"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:inputType="none"
            android:backgroundTint="@color/purple_500"
            android:textColorHint="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAbrirMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibujar fila en el mapa"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular y Guardar"
            android:textSize="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnVerResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Resultado Calculado"
            android:textSize="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:visibility="gone" />



    </LinearLayout>
</ScrollView>
